# This is where the custom zsh_functions live
# This worked quite well allowing me to pipe xclip for use on git{hub,lab}
# I kill me
# Function for GPG pubkey export
gpg-copy-pub() {
  # If no argument is given, copy the first public key found
  if [[ $# -eq 0 ]]; then
    gpg --export --armor | xclip -selection clipboard
    echo "✓ Default public key copied to clipboard.":
  else
    # If an argument is given, use it as the identifier
    gpg --export --armor "$1" | xclip -selection clipboard
    echo "✓ Public key for '$1' copied to clipboard."
  fi
}


